{
  "name": "nikopeikrishvili/twiliominimal",
  "description": "Minimal package for just sending sms messages via Twilio",
  "type": "library",
  "require": {
    "guzzlehttp/guzzle": "^6.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.*",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Niko Peikrishvili",
      "email": "niko.peikrishvili@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "NikoPeikrishvili\\TwilioMinimal\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "codding-style": "phpcs"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
